"resource/layout/overlaydesktop_lores.layout" {
	styles {
		sidemenu {}
		
		topbar {
			font-size=30
			textcolor=text_onDarkBG
			font-weight=400
			font-family=heavyfont
		}
		
		clocksuffix {
			font-size=30
			textcolor=text_onDarkBG
			font-weight=400
			font-family=heavyfont
			font-style=uppercase;
		}
		
		timeStrings {
			font-size=18
			textcolor=disabled_OnDarkBG
			font-family=basefontfont
			font-weight=400
		}
	}
	
	layout {
		region {
			name=overlay
			width=max
			align=top-center
			margin-left=15
			margin-top=8
			margin-right=15
			margin-bottom=15
		}

		region {
			name=buttonsarea
			region=overlay
			width=560
			height=max
			y=144
			margin-bottom=270
		}

		region {
			name=broadcastarea
			region=overlay
			width=645
			height=max
			align=right
		}

		region { name="topbar" region=overlay width="max" height=50 }
	
		region { name="detailpanels" region=overlay align=bottom width=max height=210 margin-bottom=100 }
		region { name="taskbar" region=overlay width="max" height=75 align=bottom }
		
		place {
			controls="BroadcastDetailPanel"
			region=broadcastarea
			align=bottom
			width=645
			height=160
		}
		
		place {
			controls="GameHubButton,GameGroupsButton,ChatRoomButton,DLCButton,GuideButton,GuidesButton,LegacyCDKeyButton,WebSiteButton,ForumsButton,RecommendButton,WorkshopButton,FriendsButton,PlayersButton,AchievementsButton,ScreenshotsButton"
			y=50
			align=left
			region=buttonsarea
			dir=down
			spacing=8
		}
		
		place {
			control="Clock,ClockSuffix"
			region=overlay
			align=top-center
		}

		place {
			control="SessionText,TwoWeeksText,ForeverText"
			dir=down
			region=overlay
			y=43
			spacing=3
		}

		place {
			control="CloseButton"
			region=overlay
			align=right
			width=40
			height=40
			y=7
		}
	}	
}
