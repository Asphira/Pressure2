"resource/layout/gamespage_mini.layout" {
	styles {
		CGamesPage_Mini {
			bgcolor=custombackgroundnofocus
			
			render {
				1="image_tiled(x0,y0+55,x1,y0+59, graphics\material\shadows\top)"
			}
			
			render_bg {				
				//Apply the subnav
				2="fill(x0,y0+55,x1,y0+100, customgreysecondary)"
				3="fill(x0,y0+100,x1,y0+120, customgreysecondary)"
				
			}
		}

		FrameTitle {
			bgcolor="customgreyprimary"
			font-family=basefont
			font-size=24
			font-weight=400
			inset="0 0 0 0"
			minimum-height=55
			textcolor="disabled_OnDarkBG"
			
			render_bg {
				// Adds the 1 pixel highlight on the top of the title bar.
				0="fill(x0,y0,x1,y0+1, customgreyaccent)"
			}
		}
		
			FrameTitle:framefocus {
				textcolor="white"
			}
		
		RootMenu {
			bgcolor=none
			inset="0 0 0 0"
			padding=0
		}
		
		"MenuBar MenuButton" {
			bgcolor="none"
			minimum-height=35
			minimum-width=35
			textcolor=none
			
			render_bg {
				0="image(x0+5,y0+5,x1,y1, graphics/icons/mainmenu/standard/steam)"
			}
		}
		
			"MenuBar MenuButton:hover" {
				render_bg {
					0="image(x0+5,y0+5,x1,y1, graphics/icons/mainmenu/hover/steam)"
				}
			}

			"MenuBar MenuButton:selected" {
				render {
					0="image(x0,y0,x1,y1, graphics/icons/mainmenu/active/steam)"
				}
			}





		"CGamesPage_Mini ListPanelColumnSelectButton" // the games list column chooser
			{
				inset="-3 3 0 0"
				render
				{
				// background fill
				1="fill( x0, y0 + 1, x1 - 1, y1, none )"  
				2="image( x0 + 3, y0 + 3, x1, y1, graphics/icon_collapse )"
				}   
			     render_bg {}
			}
	
		
		
		grouper {}
		

		
		// The game filter dropdown
		NavLabel2 {
			textcolor="secondaryText_onDarkBG"
			bgcolor="none"
			font-family=basefont
			font-style="normal"
			font-size=20
			font-weight=400
			padding-left=10
			padding-right=35
			
			render_bg {
				0="image(x1-35, y0+21, x1, y1, graphics\icons\dropdown\standard\down)"
			}
		}
		
			NavLabel2:hover {
				textcolor=text_onDarkBG
				
				render_bg {
					0="image(x1-35, y0+21, x1, y1, graphics\icons\dropdown\hover\down)"
				}
			}
			
			NavLabel2:selected {
				textcolor=text_onDarkBG

				render_bg {
					0="fill(x0,y0,x1,y1, disabled_onDarkBG)"
					1="image(x1-35, y0+21, x1, y1, graphics\icons\dropdown\hover\down)"
				}
			}
		
		LibrarySearch {
			padding-left=0
			font-family=basefont
			font-size=18
			font-weight=400
			textcolor="text_onLightBG"
			inset-top=0
			inset-left=1
			bgcolor=custombackgroundprimary
			
			render {
				0="fill(x0-40,y1-1,x1,y1, divider)"
			}
		}
		
			LibrarySearch:selected {}
			
			LibrarySearch:empty {
				font-style=italic
				textcolor="disabled_onLightBG"
			}
			
			LibrarySearch:hover {
				textcolor="text_onLightBG"
			}
			
			LibrarySearch:empty:hover {
				textcolor="secondaryText_onLightBG"
			}
			
			LibrarySearch:disabled {
				font-style=italic
				textcolor="disabled_onLightBG"
			}
		
		LibrarySearchIcon {
			bgcolor=custombackgroundprimary
			textcolor=none
			
			render_bg {
				-1="fill(x1,y0,x1+10,y1, custombackgroundprimary)"
				0="image(x0+14,y0+13,x1,y1, graphics/icons/search/standard)"
				1="fill(x0,y1-1,x1+25,y1, divider)"
			}
		}
		
			LibrarySearchIcon:disabled {}

		ListPanelColumnheader
		{
			render {}
			bgcolor=none
			render_bg {}	
		}
		
		"CGamesPage_Mini CGameFilterMenuButton"
		{
			inset="3 0 0 0"
			padding-left="-3"
		}
		
		DetailsBorderPanel
		{}
	}

 	layout {
		place {
			control="frame_captiongrip"
			margin=0
			width=max
			height=104
		}
		
		place [!$OSX]  {
			control="frame_minimize,frame_maximize,frame_close"
			align=right
			margin-top=16
			margin-right=15
			spacing=1
		}

		place [!$OSX] {
			control="MenuBar"
			align=top
			width=45
			height=45
			x=6
			y=6
		}

		region {
			name="subnav"
			width=max
			height=45
			y=55
		}
		
		place {
			control="library_search"
			width=120
		}
		
		place {
			control=label_search_icon
			width=40
		}
		
		place {
			control="label_search_icon,library_search,library_filters"
			align=left
			height=max
			region=subnav
			spacing=8
		}


		
		place { control="subnavgroup_library" align=top-center y=38 height=26 width=max margin-right=9 margin-left=9 }
		
		place {
			control="gameslist"
			align=left
			margin-top=104
			width=max
			height=max
		}
 	}
}
