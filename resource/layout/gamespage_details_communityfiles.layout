		GameDetailsCommunityFiles.PanelSpacing "25"
		RichText.InsetX "0"
		RichText.InsetY "3"
	}

	styles {
		communityfilesdetails {
			render {
				1="image_tiled( x0-12, y0-15, x1, y0-11, graphics/material/shadows/top )" // 4px
				2="image_tiled( x0-12, y1+2, x1, y1+6, graphics/material/shadows/bottom )" // 4px
			}
			render_bg {
				-1="fill(x0-12,y0-15,x1,y1+6, workshopblue)"
				0="image(x0-12,y0-15,x1,y1, graphics/workshopbg)"
			}
		}
		
		infolabel {}	

		button {
			padding-left=8
			padding-right=4
			
			render_bg {}
		}

			button:hover {
				bgcolor=dividers_OnLightBG
			}
	}

	layout {
		region {
			name=body
			margin=8
			width=max
			height=max
		}

		place {
			control=workshopdetails
			region=body
			width=max
		}

		place {
			region=body
			width=210
			y=85
			height=180
			control=*communityfile
			dir=right
			spacing=8
			margin=0
		}		
		
		place {
			region=body
			control=viewall
			align=bottom
