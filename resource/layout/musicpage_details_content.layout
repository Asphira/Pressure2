"resource/layout/musicpage_detail_content.layout" {
	styles {
		DetailsBorderPanel {
			render_bg {}
		}
		
		AlbumOrArtistListStyle {
			inset="0 0 0 0"
			bgcolor=custombackgroundprimary
			font-size=16
			padding-left=4
			padding-right=25
		}
		
		EmptyDatabaseText {
			textcolor="disabled_onLightBG"
			font-size="15"
		}
		
		CrawlingText {
			textcolor="disabled_onLightBG"
			font-size="15"
		}
		
		CMusicPage_Details_Content {
			render {}
			render_bg {}
		}
		
		"MusicPage_Details_Content ListPanel" {
			font-size=15
			render_bg {}
			render {}
			padding-left=4
			padding-right=2
			inset="0 0 -1 0"
		}

		
		"MusicPage_Details_Content ListPanelInterior" {
			inset="0 0 -1 0"

			render {}
			render_bg {
				0="fill(x1-1,y0,x1,y1, dividers_onLightBG)"
			} 
		}
		
		"MusicPage_Details_Content ListPanelInterior:scrollbar" {     
			inset="0 0 -1 0"
			bgcolor=none
			
			render_bg {}
			}
		
		"MusicPage_Details_Content ListPanelDragger"
		{
			inset="0 0 0 0"
			bgcolor="none"
			render {}
			render_bg {}
		}

		"MusicPage_Details_Content ListPanelColumnHeader" [!$OSX]
		{
			bgcolor="none"
			font-size=14
			inset="0 0 0 0"
			render {}
			render_bg  {}
		}

		"AlbumOrArtistListStyle ListPanelColumnSelectButton" {
       		inset="-3 3 0 0"
        		render {
          			5="image( x0 + 3, y0 + 3, x1, y1, graphics/icon_collapse )"
        		}   
        		render_bg {
        			1="fill( x0 + 1, y0, x1 - 1, y1, orange500 )"
        		}
		}
		
		DetailsBorderPanel {}	

		BackgroundImage {}

		"ListPanel RichText" {
			textcolor=disabled_onLightBG
			font-size=15
		}
	}

	layout {
		region {
			name="background"
			width=0
			height=0
		}

		region	{
			name="list"
			width=306
			height=max
		}

		region {
			name="details"
			x=306
			width=max
			height=max
			overflow=scroll-vertical 
			dir=down
		}
		
		place {
			control=EmptyDatabaseText
			x=0
			y=0
			width=max
			height=max
			margin=10
		}

		place {
			control=CrawlingText
			x=0
			y=0
			width=max
			height=max
			margin=10
		}
		
		place {
			control=DetailsBorder
			width=max
			height=max
			margin=-2
		}

		place {
			control=AlbumList,ArtistList,PlaylistList
			width=306
			height=max
			margin-top=-1
		}

		place { control=*MusicPageDetailsAlbum region=details width=max dir=down spacing=10 }
		place { control=*MusicPageDetailsPlaylist region=details width=max dir=down spacing=10 }
		
		place {
			control=BackgroundImageA,BackgroundImageB,BackgroundImageMask
			width=0
			height=0
		}
	}

}
