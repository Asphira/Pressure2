"resource/layout/subpaneloptionsdownloads.layout" {
	styles {
		highlight {
			textcolor=secondaryText_onLightBG
		}

		label {
			textcolor=secondaryText_onLightBG
		}

		CSubPanelOptionsDownloads {
			render_bg {
				5="image(x0+26,y0+27,x1,y1, graphics/icons/settings/libraries)"
				6="image(x0+26,y0+119,x1,y1, graphics/icons/settings/webbrowser)"
				7="image(x0+26,y0+211,x1,y1, graphics/icons/settings/downloads)"
			}
		}
	}
	
	layout {
		region {
			name=contentlibrary
			height=114
			width=max
			x=82
			y=0
			margin-right=29
		}

		place {
			control=LibrariesLabel
			region=contentlibrary
			y=28
			dir=down
			spacing=2
		}

		place {
			control=ManageInstalledApps
			width=350
			height=34
			start=LibrariesLabel
			dir=down
			y=4
		}

		place {
			control=Divider1
			x=71
			y=100
			width=max
			height=1
			align=left
		}

		region {
			name=regions
			height=114
			width=max
			x=82
			y=92
			margin-right=29
		}

		place {
			control=RegionLabel
			region=regions
			y=28
			dir=down
			spacing=2
		}

		place {
			control=DownloadRegionCombo
			width=350
			height=34
			start=RegionLabel
			dir=down
			y=4
		}

		place {
			control=Divider2
			x=71
			y=192
			width=max
			height=1
			align=left
