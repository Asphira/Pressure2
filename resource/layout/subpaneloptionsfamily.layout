"resource/layout/subpaneloptionscloud.layout" {
	styles {
		highlight {
			font-size="30"
			font-style="normal"
			font-family=mediumfont
			textcolor="customgreyprimary"
		}
	}
	
	layout {
		
		region {
			name=page
			height=max
			width=max
			x=24
			y=24
			margin-right=24
		}

		place {
			controls="FamilySharingTitle"
			region=page
		}

		place {
			control="BorrowersLabel"
			region=page
			start=FamilySharingTitle
			width=max
			dir=down
			y=7
		}

		place {
			control="BorrowersList"
			region=page
			start=BorrowersLabel
			width=max
			height=125
			dir=down
			y=7
		}

		place {
			control=ShowNotificationsCheck
			height=18
			region=page
			start=BorrowersList
			width=max
			dir=down
			y=7
		}

		place {
			controls="AuthorizeDeviceButton,DeauthorizeDeviceButton,ManageSharingButton"
			region=page
			start=ShowNotificationsCheck
			dir=down
			width=350
			height=34
			y=4
			spacing=4
		}

		place {
			controls="Divider1"
			start=ManageSharingButton
			dir=down
			width=max
			y=19
			x=46
		}	


		place {
			controls="FamilyOptionsTitle"
			region=page
			start=Divider1
			dir=down
			y=19
			x=-56
		}

		place {
			control="FamilyOptionsText"
			region=page
			start=FamilyOptionsTitle
			width=max
			dir=down
			y=7
		}

		place {
			controls="ManageOptionsButton"
			region=page
			start=FamilyOptionsText
			dir=down
			width=350
			height=34
			y=4
			spacing=4
		}		
		
		place {
			control=FamilySharingTextState
			height=0
		}
	}
}