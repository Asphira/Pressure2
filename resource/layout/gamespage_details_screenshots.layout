"resource/layout/gamespage_details_screenshots.layout" {
	colors {
		// Extra spacing beyond the flowing elements to account for header and button at the bottom
		GameDetailsScreenshots.ExtraVerticalSpacing "125"

		RichText.InsetX "0"
		RichText.InsetY "3" 
	}

	styles {
		screenshotsdetails { 
			render_bg {
				1="fill(x0-20,y0-15,x1,y0-14, dividers_onLightBG)"
			}
		}

		button {
			render_bg {}
		}
	}

	layout {
		region {
			name=body
			margin=8
			width=max
			height=max
		}

		place {
			region=body
			control=headerlabel
			width=max
		}
		
		place {
			region=body
			control=screenshotsarea
			dir=down
			y=48
			width=max
		}

		place {
			region=body
			control=viewall
			align=bottom
			margin-bottom=5
		}
	}
}