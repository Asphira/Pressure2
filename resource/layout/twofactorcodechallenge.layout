"resource/layout/twofactorcodechallenge.layout" {
	styles {
		TwoFactorCodeChallenge {
			minimum-width=380
			minimum-height=420

			render {
				0="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
			render_bg {
				0="image(x0,y0,x1,y1, graphics/steamguardheader)"
			}
		}

		Key {
			image="graphics/icon_security_key"
		}
		
		AuthCode {
			minimum-height=50
			font-size=40
		}

		Instructions {
			font-family=mediumfont
			font-size=15
			textcolor=text_onLightBG
		}
		
		Background {
			render_bg {}
		}

	}
	
	layout {
		place {
			control="frame_title"
			visible=0
			height=0
		}

		place {
			control="frame_captiongrip"
			margin=0
			width=max
			height=113
		}

		place {
			control=Label2
			x=24
			y=137
			width=max
			height=max
			margin-right=24
		}

		place {
			control=Key
			x=172
			y=201
		}
		
		place { 
			control=AuthCode
			width=144
			x=118
			y=275
		}

		region {
			name="buttons"
			width=max
			height=58
			align=bottom
		}

		place {
			control="OK,Cancel"
			region="buttons"
		    width=92
		    height=34
		    align=right
			margin-right=11
			margin-top=12
			spacing=12
		}

		place {
			control=Label1,Background
			height=0
		}
	}
}