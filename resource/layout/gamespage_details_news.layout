"resource/layout/gamespage_details_news.layout" {
	colors {
		// This is needed to determine how much space is needed veritically for the header and button
		// in addition to the autocomputed height for the *newsitem panels, adjust it if you change vertical
		// spacing of this controls layout.
		GameDetailsNewsContainer.ExtraVerticalSpacing "124"
	}

	styles {
		newsdetails { 
			render_bg {
				0="fill(x0-20,y0-15,x1,y0-14, dividers_onLightBG)"
			}
		}

		button {
			render_bg {}
		}
	}

	layout {	 
		region {
			name=body
			margin=8
			width=max
			height=max
		}

		place {
			region=body
			control=headerlabel
			width=max
		}

		place {
			region=body
			y=36
			control=*newsitem
			dir=down
			width=max
			spacing=20
		}

		place {
			region=body
			align=bottom
			control=viewall
			margin-bottom=5
		}
	}
}