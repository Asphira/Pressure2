"resource/layout/overlay_broadcastpanel.layout" {
	styles {
		DarkRegion {}
		PreviewImage {}

		Button {
			textcolor=lightblue300
			font-family=heavyfont
			font-size=20
			font-weight=400
			font-style=normal
			padding-left=57
			padding-top=0
			inset-left=-6
			inset-top=-18

			render_bg {}			
		}

			button:hover {
				textcolor=lightblue200
			}

		detailsbox {
			render_bg {
				0="fill(x0,y0,x1,y1, secondaryText_OnLightBG)"
			}
		}

		highlight {
			textcolor=secondaryText_onDarkBG
			font-size=17
		}
	}
	
	layout {
		place {
			control=ShowSettings
			height=0
		}

		region {
			name=title
			width=max
			height=111
			margin-left=23
			margin-top=29
			margin-right=23
		}

		region {
			name=actions
			align=bottom
			width=max
			height=100
		}

		place {
			control=TitleText,InstructionText
			region=title
			dir=down
			spacing=20
		}

		place {
			control=StopBroadcast
			region=actions
			align=left
		}

		place {
			control=ShowBroadcast,ShowChat
			region=actions
			align=right
			margin-right=4
		}
	}
}