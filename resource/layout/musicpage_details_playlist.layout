"resource/layout/musicpage_details_playlist.layout" {
	styles {
		CMusicPage_Details_Playlist {
			bgcolor=none

			render {}
			render_bg {}
		}
		
		PlaylistTitleStyle {
			font-size="30"
			font-style="normal"
			textcolor=text_onLightBG
		}

		TracksInfoLabelStyle {
			font-size=17
			textcolor=secondaryText_onLightBG
		}
		
		TrackStyle {}
		
		CoverStyle {
			render_bg {
				-1="fill(x0,y1-1,x1+9999,y1, dividers_onLightBG)"
				0="image(x0,y0,x1,y1, graphics/music_placeholder)"
			}
		}
		
		AdditionalActionButtonStyle {}
		
		
		ActionButtonStyle { 
			textcolor=none
			bgcolor=none
			font-size=0
			minimum-width=48
			minimum-height=48
			
			render {}
			render_bg {				
				1="image(x0, y0, x1, y1, graphics\icons\playalbum\standard\playalbum)"
			}	
		}

			ActionButtonStyle:hover { 
				render_bg {				
					1="image(x0, y0, x1, y1, graphics\icons\playalbum\hover\playalbum)"
				}	
			}

			ActionButtonStyle:active { 
				render_bg {				
					1="image(x0, y0, x1, y1, graphics\icons\playalbum\active\playalbum)"
				}	
			}
	}

	layout {
		region {
			name=bodyregion
			width=max
			height=max
			overflow=scroll-vertical
		}

		place {
			control=PlaylistTitleLabel
			x=24
			y=18
			margin-right=24
			width=max
			region=bodyregion
		}
		
		place {
			control=ArtistLabel,TracksInfoLabel
			start=PlaylistTitleLabel
			dir=down
			region=bodyregion
		}

		place {
			control=PlayPlaylistButton
			height=48
			width=48
			region=bodyregion
			start=TracksInfoLabel
			dir=down
		}

		place {
			control=AddPlaylistToQueueButton,AddRandomTracksToPlaylistButton
			region=bodyregion
			dir=down
			start=PlayPlaylistButton
			y=18
			height=34
			spacing=4
		}

		place {
			region=bodyregion
			control=*MusicPageDetailsPlaylistTrack
			dir=down
			start=AddRandomTracksToPlaylistButton
			y=24
			x=-24
			width=max
			spacing=10
			height=40
		}
	}
}
