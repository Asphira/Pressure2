"resource/layout/layoutdebugdialog.layout" {
	styles {
		LayoutDebugDialog {
			minimum-width=500
			minimum-height=300

			render {
				0="image_tiled(x0,y0+34,x1,y0+38, graphics\material\shadows\top)"
			}
			render_bg {
				0="fill(x0,y0,x1,y0+79, customgreysecondary)"
			}
		}


		RichText {
			textcolor=red500
		}
	}

	layout {		
		place {
			control="tabs"
			y=34
			width="max"
			height="max"
			margin-bottom=58
		}
		
		region {
			name="buttons"
			width=max
			height=58
			align=bottom
		}

		place {
			control="containerlabel,selectionlabel"
			region="buttons"
		    height=18
		    align=left
			margin-left=11
			margin-top=12
			spacing=4
		}

		place {
			control=fileurl
			region="buttons"
		    height=18
		    align=right
			margin-right=11
			margin-top=12
			spacing=4
		}

		place {
			control="wiki_link"
			height=0
		}
	}
}