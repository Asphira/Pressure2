"resource/layout/parentallockdialog.layout" {
	styles {
		ParentalLockDialog {
			minimum-width=380
			minimum-height=200

			render {
				0="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
		}

		Hey {
			font-family=mediumfont
			font-size=15
			textcolor=text_onLightBG
		}

		Key {
			image="graphics/icons/familyviewdialog/familyview"
		}
	}
	
	layout {
		place {
			control=KeyImage
			x=24
			y=58
		}

		place {
			control=Instructions
			start=KeyImage
			x=24
			dir=right
			width=max
			height=max
			margin-right=24
		}
		
		region {
			name="buttons"
			width=max
			height=58
			align=bottom
		}

		place {
			control="OK,Cancel"
			region="buttons"
		    width=92
		    height=34
		    align=right
			margin-right=11
			margin-top=12
			spacing=12
		}
	}
}