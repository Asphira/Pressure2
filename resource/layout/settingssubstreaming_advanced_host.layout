"resource/layout/settingssubstreaming_advanced_host.layout" {
	styles {
		CSettingsSubStreamingAdvancedHost {	
			minimum-width=476
			minimum-height=200

			render {
				0="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
			render_bg {
				0="fill(x0+71,y0+136,x1,y0+137, dividers_onLightBG)"
				5="image(x0+26,y0+61,x1,y1, graphics/icons/settings/hardware)"
				6="image(x0+26,y0+155,x1,y1, graphics/icons/settings/router)"
			}
		}
	}
	
	layout {
		region {
			name="buttons"
			width=max
			height=58
			align=bottom
		}

		region {
			name=hardware
			height=114
			width=max
			x=82
			y=34
			margin-right=29
		}

		place {
			control=DescriptionLabel
			region=hardware
			y=28
			dir=down
			spacing=2
			width=max
		}

		place {
			control=EnableHardwareEncoding
			width=max
			height=18
			start=DescriptionLabel
			dir=down
			y=4
		}

		region {
			name=traffic
			height=114
			width=max
			x=82
			y=124
			margin-right=29
		}

		place {
			control=EnableTrafficPriorityLabel
			region=traffic
			y=28
			dir=down
			spacing=2
			width=max
		}

		place {
			control=EnableTrafficPriority
			width=max
			height=18
			start=EnableTrafficPriorityLabel
			dir=down
			y=4
		}
		
		place {
			control=OKButton
			region="buttons"
		    width=92
		    height=34
		    align=right
			margin-right=11
			margin-top=12
			spacing=12
		}

		place {
			control=SupportInformationLabel
			height=0
		}
	}
}