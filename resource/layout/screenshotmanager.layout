"resource/layout/screenshotmanager.layout" {
	styles {
		CScreenshotManager {
			minimum-height=577
			minimum-width=778

			render {
				0="image_tiled(x0,y0+34,x1,y0+38, graphics\material\shadows\top)"
				2="fill(x0,y1-58,x1,y1-57, dividers_onLightBG)"
			}
			render_bg {
				0="fill(x0,y0,x1,y0+79, customgreysecondary)"
			}
		} 

		WrapPanel {			
			bgcolor=white
			padding-left=4
			padding-top=4
			padding-bottom=4
			padding-right=4

			render_bg {
				0="fill(x1-1,y0,x1,y1, dividers_onLightBG)"
			}
		}

		publishcharsleft_toomanychars {
			textcolor=red500
		}

		ThumbnailUnpublished {
			bgcolor=disabled_onLightBG
		}

		ThumbnailPublished {
			bgcolor=disabled_onLightBG
		}

		ThumbnailSelected {
			bgcolor=disabled_onLightBG

			render {
				// lines around
				1="fill(x0, y0, x0+2, y1, blue500 )"  //left
				2="fill(x0, y0, x1, y0+2, blue500 )"  //top
				3="fill(x1-2, y0, x1, y1, blue500 )"  //right
				4="fill(x0, y1-2, x1, y1, blue500 )"  //bottom

				10="fill(x0,y0,x1,y1, blue500transparent)"
			}
		}

		ThumbnailUploaded {
			bgcolor=disabled_onLightBG
		}





		DarkRegionDetails {}

		SSDetails {
			minimum-width=340
			minimum-height=260

			render {
				0="fill(x0,y1-1,x1,y1, dividers_OnLightBG)"
			}
		}

		publishcaption {
			textcolor=secondaryText_onLightBG
			font-style=italic
		}


		publishcaptionprompt {}

		publishcharsleft {
			textcolor=disabled_onLightBG
		}

		gameselector {
			minimum-width=260
		}
		
		ScreenshotLoadingThrobber {
			minimum-width=100
			minimum-height=75
			bgcolor=disabled_onLightBG
		}

		LargeSelectionCount {
			font-size=60
			font-family=mediumfont
		}

		NoSelectionTitle {
			font-size="30"
			font-style="normal"
			font-family=mediumfont
			textcolor="customgreyprimary"
		}

		NoSelectionInstructions {}
	}
	
	
	layout {
		region {
			name="details"
			align=right
			y=79
			margin-bottom=58
			width=340
			height=max
		}
		
		place {
			control="DarkRegionDetails"
			region="details"
			width=max
			height=max
			z="-1"
		}

		place {
			control="SSDetails"
			region="details" 
			width=max
			height=260
			align="top-center"
		}

		place {
			control=SSDate
			start=SSDetails
			dir=down
			y=8
			x=8
			align=left
		}

		place {
			control="SSSize,SSSizeOriginal"
			start="SSDate"
			margin-right=8
			align=right
			dir=left
		}

		place {
			control="publish_caption,details_caption"
			region="details"
			x=8
			align=bottom
			margin-bottom=30
			height=90
			margin-right=8
			width=500
		}

		place {
			control="spoiler_checkbox"
			start="publish_caption"
			dir=down
			height=18
			y=4
		}

		place {
			control="publish_charsleft"
			region="details"
			start=spoiler_checkbox
			dir=right
			align="right"
			height=18
			margin-right=8
		}

		place {
			control="file_not_loaded_label"
			region="details"
			y=100
			align="top-center"
		}
		


		place {
			control="multi_img"
			region="details"
			y=40
			align="top-center"
		}

		place {
			control="multi_img_count"
			region="details"
			y=80
			align="top-center"
		}

		place {
			control="multi_img_selected"
			region=details
			start=multi_img
			dir=down
			y=18
			align="top-center"
		}

		place {
			control="multi_img_upload_size,multi_img_upload_size_info"
			region=details
			y=224
			align="top-center"
			spacing=4
		}

		place {
			control="multi_img_storage_remaining,multi_img_storage_remaining_info"
			region=details
			y=248
			align="top-center"
			spacing=4
		}

		place {
			control="instr_no_selection_title,instr_no_selection"
			region="details"
			y=24
			width=max
			x=24
			margin-right=24
			dir=down
			spacing=18
		}

		region {
			name=subnav
			width=max
			height=45
			y=34
		}

		place {
			control="game_selector"
			region=subnav
			dir=right
			height=max
		}

		region {
			name="list"
			margin-right=340
			margin-bottom=58
			width=max
			y=79
		}

		place {
			control=grid
			region=list
			width=max
			height=max
			x=4
			margin-bottom=-1
		}

		place {
			control="no_screenshots"
			region="list"
			y=50
			align="top-center"
		}

		region {
			name="buttons"
			width=max
			height=58
			align=bottom
		}

		place {
			control="multiselect_button,view_local_library_button,view_screenshots"
			region="buttons"
		    height=34
		    align=left
			margin-left=11
			margin-top=12
			spacing=12
		}

		place {
			control="delete_button,details_button,publish_button,multi_img_delete,multi_img_upload"
			region="buttons"
		    height=34
		    align=right
			margin-right=11
			margin-top=12
			spacing=12
		}

		place {
			control=selectorlabel,null_placer
			height=0
		}
	}
}