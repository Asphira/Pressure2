"resource/layout/steamrootdialog_gamespage_details.layout" {
	colors {
		divider="235 235 235 255" // Used in place of dividers_onLightBG due to opacity making them visibly darker in the client.
		headerimagebg="26 107 118 255"

		ListPanel.PostSectionLeading	14
	}
	
	styles {
		CGamesListPanel {
			bgcolor=custombackgroundprimary
			font-size=16
			
			render_bg {}
		}
		
		emptylisttext {
			textcolor="disabled_onLightBG"
			font-size="18"
			render_bg {}
		}
		
		CGamesPage_Details {
			bgcolor="custombackgroundprimary"
			inset="0 0 0 0"
			render {
				//9="fill(x0+308,y0,x1,y0+2, customgreysecondary)"
				10="image_tiled(x0+308,y0,x1,y0+4, graphics\material\shadows\top)"
			}
			render_bg {}
		}
		
		"GamesPage_Details ListPanel" {
			padding-left=4
			padding-right=25
			
			bgcolor="none"
			render_bg {}
			render {}
		}
		
		"GamesPage_Details ListPanelInterior" {
			bgcolor="none"
			inset="0 0 0 0"
			minimum-width=295
			render {}
			render_bg {}
		}
		
		"GamesPage_Details ListPanelInterior:scrollbar" {
			inset="2 0 0 0"
			bgcolor=none
			
			render_bg {}
		}
		
		ListPanelSectionHeader {
			inset="0 0 0 0"
			textcolor=customgreysecondary
			font-style="uppercase"
			bgcolor=white
			font-weight=600
			padding-top=16
			padding-bottom=16
			minimum-height=47
			
			render {}
			render_bg {
				0="fill(x0,y0-1,x1,y0, divider)"
				1="fill(x0,y1-1,x1,y1, divider)"
			}
		}
		
		"GamesPage_Details ListPanelSectionCollapser" {
			inset="0 0 0 0"
			image=graphics\icons\dropdown\padder
			padding-left=8
			padding-right=8
			render {}
			render_bg {
				0="fill(x0,y0-1,x1,y0, divider)"
				1="fill(x0,y1-1,x1,y1, divider)"
				2="image(x0+14,y0+18,x1,y1, graphics\icons\dropdown\standard\down_dark)"
			}
		}
		
		"GamesPage_Details ListPanelSectionCollapser:hover" {
			render_bg {
				0="fill(x0,y0-1,x1,y0, divider)"
				1="fill(x0,y1-1,x1,y1, divider)"
				2="image(x0+14,y0+18,x1,y1, graphics\icons\dropdown\hover\down_dark)"
			}
		}
		
		"GamesPage_Details ListPanelSectionCollapser:selected" {
			render_bg {
				0="fill(x0,y0-1,x1,y0, divider)"
				1="fill(x0,y1-1,x1,y1, divider)"
				2="image(x0+14,y0+18,x1,y1, graphics\icons\dropdown\standard\up_dark)"
			}
		}
		
		"GamesPage_Details ListPanelSectionCollapser:selected:hover" {
			render_bg {
				0="fill(x0,y0-1,x1,y0, divider)"
				1="fill(x0,y1-1,x1,y1, divider)"
				2="image(x0+14,y0+18,x1,y1, graphics\icons\dropdown\hover\up_dark)"
			}
		}
		
		"GamesPage_Details ListPanelDragger" {
			bgcolor="none"
			render {}
			render_bg {}
		}
		
		"GamesPage_Details ListPanelColumnHeader" {
			bgcolor="none"
			font-size=14
			inset="0 0 0 0"
			render {}
			render_bg {}
		}
		
		"CGamesListPanel ListPanelColumnSelectButton" {
			inset="0 0 0 0"
			render {
				0="fill(x0+5,y0+2,x1,y1, grey200)"
				4="fill(x0+5,y1-1,x1,y1+1, grey200)"
				5="image( x0 + 7, y0 + 7, x1, y1, graphics\icons\columnselectbutton\standard\columnselectbutton)"
			}
			render_bg {}
		}
		
			"CGamesListPanel ListPanelColumnSelectButton:hover" {
				render {
					0="fill(x0+5,y0+2,x1,y1, grey200)"
					4="fill(x0+5,y1-1,x1,y1+3, grey200)"
					5="image( x0 + 7, y0 + 7, x1, y1, graphics\icons\columnselectbutton\hover\columnselectbutton)"
				}
			}

			"CGamesListPanel ListPanelColumnSelectButton:selected" {
				render {
					0="fill(x0+5,y0+2,x1,y1, grey200)"
					4="fill(x0+5,y1-1,x1,y1+3, grey200)"
					5="image( x0 + 7, y0 + 7, x1, y1, graphics\icons\columnselectbutton\hover\columnselectbutton)"
				}
			}
		
		headerimage {
			render {
				-1="gradient(x0,y1-140,x1+9999,y1, none, text_OnLightBG)"
				0="image(x0, y0, x1, y1, graphics/gamedetailsbg)"
			}
			
			render_bg {
				0="fill(x0, y0, x1+9999, y1, headerimagebg)"
			}
		}
		
		// We use the header for the right column as a background for the links region.
		rightcolumnheadertext {
			inset="0 0 0 0"
			font-style=normal
			font-family=basefont
			font-weight=400
			font-size=14
			textcolor=none
			
			render_bg {
				0="fill(x0+2,y0+2,x1-2,y1-2, white)"
				
				1="image(x0-3,y1-2,x0+2,y1+4, graphics\material\buttons\white\bottomleft)"
				2="image_tiled(x0+2,y1-2,x1-2,y1+4, graphics/material/buttons/white/bottommiddle)"
				3="image(x1-2,y1-2,x1+3,y1+2, graphics/material/buttons/white/bottomright)"
				
				4="image_tiled(x0-3,y0+2,x0+2,y1-2, graphics/material/buttons/white/leftmiddle)"
				5="image_tiled(x1-2,y0+2,x1+3,y1-2, graphics/material/buttons/white/rightmiddle)"
				
				6="image(x0-3,y0-2,x0+2,y0+2, graphics/material/buttons/white/topleft)"
				7="image_tiled(x0+2,y0-2,x1-2,y0+2, graphics/material/buttons/white/topmiddle)"
				8="image(x1-2,y0-2,x1+3,y0+2, graphics/material/buttons/white/topright)"
			}
		}
		
		rightcolumnheadertext-red {
			inset="0 0 0 0"
			font-style=normal
			font-family=basefont
			font-weight=400
			font-size=14
			textcolor=none
			
			render_bg {
				0="fill(x0+2,y0+2,x1-2,y1-2, white)"
				
				1="image(x0-3,y1-2,x0+2,y1+4, graphics\material\buttons\white\bottomleft)"
				2="image_tiled(x0+2,y1-2,x1-2,y1+4, graphics/material/buttons/white/bottommiddle)"
				3="image(x1-2,y1-2,x1+3,y1+2, graphics/material/buttons/white/bottomright)"
				
				4="image_tiled(x0-3,y0+2,x0+2,y1-2, graphics/material/buttons/white/leftmiddle)"
				5="image_tiled(x1-2,y0+2,x1+3,y1-2, graphics/material/buttons/white/rightmiddle)"
				
				6="image(x0-3,y0-2,x0+2,y0+2, graphics/material/buttons/white/topleft)"
				7="image_tiled(x0+2,y0-2,x1-2,y0+2, graphics/material/buttons/white/topmiddle)"
				8="image(x1-2,y0-2,x1+3,y0+2, graphics/material/buttons/white/topright)"
			}
		}
		
		rightcolumnheadertext-green {
			inset="0 0 0 0"
			font-style=normal
			font-family=basefont
			font-weight=400
			font-size=14
			textcolor=none
			
			render_bg {
				0="fill(x0+2,y0+2,x1-2,y1-2, white)"
				
				1="image(x0-3,y1-2,x0+2,y1+4, graphics\material\buttons\white\bottomleft)"
				2="image_tiled(x0+2,y1-2,x1-2,y1+4, graphics/material/buttons/white/bottommiddle)"
				3="image(x1-2,y1-2,x1+3,y1+2, graphics/material/buttons/white/bottomright)"
				
				4="image_tiled(x0-3,y0+2,x0+2,y1-2, graphics/material/buttons/white/leftmiddle)"
				5="image_tiled(x1-2,y0+2,x1+3,y1-2, graphics/material/buttons/white/rightmiddle)"
				
				6="image(x0-3,y0-2,x0+2,y0+2, graphics/material/buttons/white/topleft)"
				7="image_tiled(x0+2,y0-2,x1-2,y0+2, graphics/material/buttons/white/topmiddle)"
				8="image(x1-2,y0-2,x1+3,y0+2, graphics/material/buttons/white/topright)"
			}
		}
		
		rightcolumnheadertext-blue {
			inset="0 0 0 0"
			font-style=normal
			font-family=basefont
			font-weight=400
			font-size=14
			textcolor=none
			
			render_bg {
				0="fill(x0+2,y0+2,x1-2,y1-2, white)"
				
				1="image(x0-3,y1-2,x0+2,y1+4, graphics\material\buttons\white\bottomleft)"
				2="image_tiled(x0+2,y1-2,x1-2,y1+4, graphics/material/buttons/white/bottommiddle)"
				3="image(x1-2,y1-2,x1+3,y1+2, graphics/material/buttons/white/bottomright)"
				
				4="image_tiled(x0-3,y0+2,x0+2,y1-2, graphics/material/buttons/white/leftmiddle)"
				5="image_tiled(x1-2,y0+2,x1+3,y1-2, graphics/material/buttons/white/rightmiddle)"
				
				6="image(x0-3,y0-2,x0+2,y0+2, graphics/material/buttons/white/topleft)"
				7="image_tiled(x0+2,y0-2,x1-2,y0+2, graphics/material/buttons/white/topmiddle)"
				8="image(x1-2,y0-2,x1+3,y0+2, graphics/material/buttons/white/topright)"
			}
		}
		
		rightcolumnlink {
			inset="0 0 0 0"
			font-size=17
			font-style=normal
			textcolor=blue500
			font-family=basefont
		}
		
		rightcolumnlink:hover {
			textcolor=blue300
		}
		
		rightcolumnlink:disabled {
			textcolor=disabled_onLightBG
		}
		
		rightcolumntag {}
		
		DetailsBorderPanel {
			bgcolor = none
			
			render {}
		}
	}
	
	layout {
		// Remove certain elements altogether.
		place {
			control=linkslabel,sendguestpasslink,achievementslink,dlclink,guidelink,*taglink
			width=0
			height=0
		}
		
		region {
			name="details"
			y=0
			x=308
			width=max
			height=max
			overflow=scroll-vertical
			margin-left=0
			margin-top=0
			margin-bottom=1
			margin-right=-1
		}
		
		region {
			name="headertext"
			region=details
			y=0
			x=0
			width=max
			height=280
			margin-right=0
		}
		
		region {
			name="rightcolumn"
			region=details
			start=headertext
			dir=down
			height=150
			width=max
		}
		
		region {
			name="detailsbody"
			region=details
			y=280
			height=max
			width=max
			overflow=allow-vertical
		}
		
		place {
			control=emptylisttext
			width=308
			height=max
			margin=8
		}
		
		place {
			control=GamesList
			width=308
			height=max
			margin-top=-2
		}
		
		place {
			control=DetailsBorder
			width=max
			height=max
		}
		
		// Using a y=-400 this attemps to vertically horizontally align most screenshots.
		place  {
			control=headerimagea
			region=details
			width=1280
			height=280
			x=0
			y=-400
			//margin-top=2
		}
		
		place {
			control=headerimageb
			region=details
			width=1280
			height=280
			x=0
			y=-400
			//			margin-top=2
		}
		
		place {
			control=gametitleheader
			region=headertext
			dir=down
			height=96
			x=33
		}
		
		place {
			control=gamesubheader
			start=gametitleheader
			region=headertext
			dir=down
			height=180
		}
		
		region {
			name=links
			y=0
			region=detailsbody
			width=max
			height=162
		}
		
		place {
			control=tagslabel
			region=links
			height=max
			width=max
			margin-left=12
			margin-right=12
			margin-top=16
			margin-bottom=16
		}
		
		region {
			name=linksleft
			region=links
			width=200
			height=130
			align=left
		}
		
		place {
			control=gamehublink,forumlink,ogglink,newslink
			region=linksleft
			dir=down
			align=left
			y=30
			x=30
			spacing=8
		}
		
		region {
			name=linkscenter
			region=links
			width=200
			height=130
			align=top-center
		}
		
		place {
			control=cdkeylink,manuallink,storelink,guideslink
			region=linkscenter
			dir=down
			align=left
			y=30
			spacing=8
		}
		
		region {
			name=linksright
			region=links
			width=200
			height=130
			align=right
		}
		
		place {
			control=recommendlink,supportlink,edittagslink
			region=linksright
			dir=down
			align=left
			y=30
			spacing=8
		}
		
		place  {
			control=welcomedetails,turnnotifications,friendsdetails,achievementsdetails,clouddetails,communityfilesdetails,dlcdetails,newsdetails,nonsteamdetails,screenshotsdetails
			region=detailsbody
			start=tagslabel
			dir=down
			width=max
			spacing=20
			y=16
		}
	}
}