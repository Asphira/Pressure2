"steam/cached/overlaywebbrowser.layout" {	
	styles {
		TextEntryURL {
			font-family=basefont
			font-size=18
			font-weight=400
			textcolor="text_onLightBG"
			inset-top=0
			inset-left=8
			bgcolor=custombackgroundprimary
			selectedtextcolor="white"
			selectedbgcolor="blue500"
			shadowtextcolor="disabled_onLightBG"

			render {}
			render_bg {
				-1="fill(x1,y0,x1+25,y1, custombackgroundprimary)"
			}
		}
		
			TextEntryURL:Hover {}

			TextEntryURL:Disabled {
				textcolor="disabled_onLightBG"
			}
	}
	
	layout {
		place {
			control=frame_captiongrip
			width=max
			height=55
		}

		region {
			name="subnav"
			width=max
			height=45
			y=10
		}

		region {
			name=body
			height=max
			width=max
			y=55
		}

		place {
			control="HTMLField"
			region=body
			width=max
			height=max
		}	

		place {
			control="PageLoadThrobber"
			region=subnav
			align=right
			height=max
		}
		
		place {
			control=BackButton,ForwardButton,ReloadButton,StopButton
			region=subnav
			align=left
			width=24
			height=max
			x=8
			spacing=6
		}

		place {
			control="EVCert,URLBar"
			region=subnav
			align=left
			height=max
			width=max
			spacing=0
			start=stopbutton
			margin-left=8
			end-right=PageLoadThrobber
		}

		place {
			control=URLStatusImage,HomeButton,StatusText
			width=0
			height=0
		}
	}	
}